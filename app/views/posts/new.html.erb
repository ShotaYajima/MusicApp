<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_tag("/posts/create",  {multipart: true}) do %>
      <div class="form">
        <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>            
          <div class="form-error">            
              <%= message %>            
            </div>            
        <% end %>
        <%= label_tag :artist_title, "おすすめアーティスト名" %>
          <%= text_field_tag :artist_title, @post.artist_title %>

          <p>画像<p>
          <input name="image" type="file" required>

          <%= label_tag :content, "内容" %>
          <textarea name="content"><%= @post.content %></textarea> <%#複数行の入力が可能な入力欄を作成するためのタグ createのparamsに向かう%>
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>
</div>