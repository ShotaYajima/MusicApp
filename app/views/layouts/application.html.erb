 
<!DOCTYPE html>
<html>
  <head>
      <title>MusicApp</title>
      <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_importmap_tags %>
  </head>

  <body>

    <header>
      <ul class="header-menus">
        <div class="header-logo">
          <% if @current_user %>
            <%= link_to(image_tag("/MusicIcon1.png", alt: "MusicApp" ,class: "logo-image"), "/posts/index") %>
          <% else %>
            <%= link_to(image_tag("/MusicIcon1.png", alt: "MusicApp", class: "logo-image"), "/") %>
          <% end %>
        </div>
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("投稿一覧", "/posts/index") %>
          </li>
          <li>
            <%= link_to("新規投稿", "/posts/new") %>
          </li>
          <li>
            <%= link_to("ユーザー一覧", "/users/index") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", {method:"post"}) %>
          </li>
          <% else %>
          <li>
            <%= link_to("MusicAppとは", "/about") %>
          </li>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %><!-- 各ビューファイルは以下のyieldに代入される-->
  </body>
</html>
